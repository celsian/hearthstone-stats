          <td colspan=1>W: <%= f.text_field :wins, placeholder: "Wins", style: 'font-size: 10px; height: 10px; width: 55px;' %>
          L: <%= f.text_field :losses, placeholder: "Losses", style: 'font-size: 10px; height: 10px; width: 60px;' %>
