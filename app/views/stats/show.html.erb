        <td><%= "W: #{@user.stat.wr_against_hunter_wins} L: #{@user.stat.wr_against_hunter_losses}" %></td><td><%= Stat.perc(@user.stat.wr_against_hunter_wins, @user.stat.wr_against_hunter_losses) %></td>
