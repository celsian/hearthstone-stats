      </tr>
      <tr>
        <th class="h">Warlock</th>
        <td><%= "W: #{@user.stat.wr_as_warlock_wins} L: #{@user.stat.wr_as_warlock_losses}" %></td><td><%= Stat.perc(@user.stat.wr_as_warlock_wins, @user.stat.wr_as_warlock_losses) %></td>
