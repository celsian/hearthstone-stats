<div class="row">
  <span class="span9">
    <%= form_for @match do |f| %>
    <table width="300" border=0 cellpadding=5>
      <tr>
        <td>
          Enemy:
        </td>
        <td>
          <div class="btn-group" data-toggle="buttons-radio">
            <%= f.radio_button :enemy, 'Druid', :id=>"Druid", :style=>"display:none;" %>
            <label for="Druid" class="btn btn-warning">Druid</label>
            <%= f.radio_button :enemy, 'Hunter', :id=>"Hunter", :style=>"display:none;" %>
            <label for="Hunter" class="btn btn-success">Hunter</label>
            <%= f.radio_button :enemy, 'Mage', :id=>"Mage", :style=>"display:none;" %>
            <label for="Mage" class="btn btn-info">Mage</label>
            <%= f.radio_button :enemy, 'Paladin', :id=>"Paladin", :style=>"display:none;" %>
            <label for="Paladin" class="btn btn-pink">Paladin</label>
            <%= f.radio_button :enemy, 'Priest', :id=>"Priest", :style=>"display:none;" %>
            <label for="Priest" class="btn">Priest</label>
            <%= f.radio_button :enemy, 'Rogue', :id=>"Rogue", :style=>"display:none;" %>
            <label for="Rogue" class="btn btn-yellow">Rogue</label>
            <%= f.radio_button :enemy, 'Shaman', :id=>"Shaman", :style=>"display:none;" %>
            <label for="Shaman" class="btn btn-primary">Shaman</label>
            <%= f.radio_button :enemy, 'Warlock', :id=>"Warlock", :style=>"display:none;" %>
            <label for="Warlock" class="btn btn-purple">Warlock</label>
            <%= f.radio_button :enemy, 'Warrior', :id=>"Warrior", :style=>"display:none;" %>
            <label for="Warrior" class="btn btn-tan">Warrior</label>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          I went:
        </td>
        <td>
          <div class="btn-group" data-toggle="buttons-radio">
            <%= f.radio_button :first, 'true', :id=>"First", :style=>"display:none;" %>
            <label for="First" class="btn">First</label>
            <%= f.radio_button :first, 'false', :id=>"Second", :style=>"display:none;" %>
            <label for="Second" class="btn">Second</label>
        </td>
      </tr>
      <tr>
        <td>
          Result:
        </td>
        <td>
          <div class="btn-group" data-toggle="buttons-radio">
            <%= f.radio_button :win, 'true', :id=>"Win!", :style=>"display:none;" %>
            <label for="Win!" class="btn">Win!</label>
            <%= f.radio_button :win, 'false', :id=>"Loss", :style=>"display:none;" %>
            <label for="Loss" class="btn">Loss</label>
        </td>
      </tr>
      <tr>
        <td colspan="3"><%= f.submit "Add Match", class: "btn btn-primary" %></td>
      </tr>
    </table>
    <% end %>
  </span>
</div>